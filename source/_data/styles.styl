body {
  background-color: #242525; 
  .post-title a, .post-nav a, .post-body a{
    color: unset;
  }
  .sidebar li {
    color: unset;
  }
  // 侧边栏颜色样式
  .sidebar .nav-link span {
    color: unset;
  }
  .headband {
    display: none;
  }
}


///////////
// 侧边栏 //
///////////
.header-inner {
  //background-image: url("/images/site-meta-bg/sky_latest.jpg");
  background-size: cover;
  .site-meta {
    background: none;
  }

  .site-nav .menu .menu-item a {
    color: unset;
    border-bottom: none;
  }

  .site-nav .menu .menu-item a:hover, .site-nav .menu .menu-item-active a {
    background: rgba(0, 0, 0, 0.2);
  }

  .site-title {
    font-size: 1.375em;
  }
}

// 侧边栏上
.header,.sidebar {
    opacity: 0.3 !important;
    -webkit-transition: all .2s ease-in;
    -moz-transition: all .2s ease-in;
    -o-transition: all .2s ease-in;
    transition: all .2s ease-in;

    &:hover {
      opacity: 1 !important;
    }
}

// 侧边栏下
.sidebar {
  .links-of-author {
    margin-top: 5px;
  }

  .site-author-image {
    transition: transform 0.75s;
    &:hover {
      -webkit-transform: rotate(360deg);
      -moz-transform: rotate(360deg);
      -ms-transform: rotate(360deg);
      transform: rotate(360deg);
    }
  }

  .site-author-name {
    line-height: 2;
    font-weight: 400;
  }
}

/////////////
// 文章样式 //
////////////
.posts-expand {
  padding-top: 0;

  .post-body {
    p {
      margin: 5px 0 15px 0;
      line-height: 1.5;
      word-wrap: break-word;
    }

    p + ol, p + ul {
      margin-top: -10px;
    }

    a, span.exturl {
      text-decoration: none;
      // border-bottom: none;
    }

    h1 {
      padding-bottom: .3em;
      border-bottom: 1px solid #eaecef;
    }

    h1, h2, h3, h4, h5, h6 {
      margin: 0.6em 0 0.6em 0;
    }

    code {
      padding: 4px 4px 1px 4px;
      //background: #eee8d5;
    }

    img {
      max-height: 350px;
      margin: 0 auto 10px;
    }

    .fancybox img {
      //margin: 0 auto 20px;
      padding: 0;
      border: 0;
      margin: 5px 0;
      box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.10);
    }

    // disable shadow for loading img.
    // p.s. how to be more specific..

    .fancybox img[src*="loading.svg"] {
      box-shadow: none;
    }

    .fancybox img:hover {
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.12), 0 2px 4px 0 rgba(0, 0, 0, 0.08);
    }
  }

  .post-header {
    .post-meta {
      margin: 5px 0 5px 0;
      padding: 5px, 0;

      a, time {
        color: unset;
        // border-bottom: none;
      }
    }

    .post-title {
      font-size: 1.5em;
      font-weight: 400;

      .post-title-link {
        vertical-align: baseline;
      }

      .post-title-link:hover {
        text-decoration: none;
        border-bottom: none;
      }
    }
  }

  .post-footer {
    // 文章之间的间隔
    padding: 25px;

    .post-eof {
      display: none;
    }
  }
}


//////////////////
// 归档的标题样式 //
/////////////////
.posts-collapse {
  .collection-year {
    margin: 10px 0;
  }

  .post-header {
    margin: 0;
    border-bottom: none;
  }

  .post-title {
    margin-top: 5px 0;
    font-size: 1em;

    span {
      margin-left: 5px;
    }

  }

  article {
    margin: 10px 0;
  }

  .collection-year {
    margin: 20px 0 0 0;
  }
}

